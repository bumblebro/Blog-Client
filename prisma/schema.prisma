generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Blogs {
  id        Int     @id  @default(autoincrement())
  section  String  
  subsection  String
  blogDetails BlogDetail[]
  creationDate DateTime @default(now())
}

model BlogDetail {
  id          Int       @id @default(autoincrement())
  title       String
  description String
  url         String
  blogId      Int
  blog        Blogs     @relation(fields: [blogId], references: [id])
}
